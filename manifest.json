{
  "manifest_version": 3,
  "name": "Rock Paper Scissors 3D",
  "version": "1.0",
  "description": "Play rock-paper-scissors with 3D hand-like effect",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["three.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 